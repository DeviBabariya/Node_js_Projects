<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie App</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #ffffff;
            color: #222;
        }

        .container {
            max-width: 1200px !important;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        /* Header */
        .main-header {
            background: #ffffff;
            padding: 12px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .main-header .container {
            max-width: 1200px;
            margin: auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            width: 130px;
            margin-top: 5px;
        }

        .nav-links {
            display: flex;
            gap: 25px;
        }

        .nav-links a {
            color: #444;
            text-decoration: none;
            font-weight: 500;
            font-size: 16px;
            transition: color 0.3s ease, border-bottom 0.3s ease;
            padding-bottom: 3px;
            margin-top: 3px;
        }

        .nav-links a:hover {
            color: #e31c25;
            border-bottom: 2px solid #e31c25;
        }

        .movie-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 40px 20px;
            max-width: 1300px;
            margin: auto;
            justify-content: center;
        }

        .movie-card {
            display: flex;
            flex-direction: column;
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 280px;
            border: 1px solid #ddd;
        }

        .movie-card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .movie-card img {
            width: 100%;
            height: 350px;
            object-fit: cover;
            object-position: top;
            background-color: #f5f5f5;
            border-bottom: 1px solid #eee;
        }

        .movie-content {
            padding: 15px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .movie-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #222;
        }

        .movie-info {
            font-size: 14px;
            color: #666;
            margin-bottom: 6px;
        }

        .button-group {
            margin-top: auto;
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .action-btn {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            text-decoration: none;
            color: white;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .edit-btn {
            background-color: #6c6f6d;
            cursor: pointer;
        }

        .edit-btn:hover {
            background-color: #218838;
        }

        .delete-btn {
            background-color: #e31c25;
            cursor: pointer;
        }

        .delete-btn:hover {
            background-color: #c0171d;
        }


        .search-bar input {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #bbb;
            background: #fff;
            color: #000;
            font-size: 14px;
            margin: 20px;
            transition: all 0.3s ease;
            margin-left: 50px;
        }

        .category {
            margin-left: 70px;
        }

        .container-filter{
            max-width: 1400px;
            margin-left: 20px;
        }

        .filter-btn {
            padding: 7px 10px;
            font-size: 14px;
            font-weight: 600;
            border-radius: 5px;
            border: none;
            color: #e31c25;
            background-color: #fff;
            margin-top: 20px;
            border: 1px solid #e31c25;
            margin-right: 8px;
            cursor: pointer;
        }

        .filter-btn:hover {
            background-color: #e31c25;
            color: #fff;
            transition: all ease-in-out .1s;
            cursor: pointer;

        }

        .search-btn {
            padding: 7px 10px;
            font-size: 14px;
            font-weight: 600;
            border-radius: 5px;
            border: none;
            background-color: #e31c25;
            color: #fff;
            height: 38px;
            margin-top: 19px;
            cursor: pointer;
        }

        .search-btn:hover,
        .view-btn {
            border: 1px solid #e31c25;
            background-color: #fff;
            color: #e31c25;
            transition: all ease-in-out .1s;
        }
    </style>
</head>

<body>


    <header class="main-header">
        <div class="container">
            <a href="/" class="logo">
                <img src="https://cdn.prod.website-files.com/600ee75084e3fe0e5731624c/65b6384089ec9e265952391f_bookmyshow-logo-vector-removebg-preview%20(1).png"
                    alt="logo">
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/add">Add Movie</a>
            </div>
        </div>
    </header>

    <div class="filter-section ">
        <div class="container-filter d-flex">
            <div class="category">
                <div class="mb-3">
                    <form action="/" method="get" style="display:inline-block;">
                        <input type="hidden" name="category" value="Bollywood">
                        <button type="submit" class="mx-1 filter-btn">Bollywood</button>
                    </form>

                    <form action="/" method="get" style="display:inline-block;">
                        <input type="hidden" name="category" value="Hollywood">
                        <button type="submit" class="mx-1 filter-btn">Hollywood</button>
                    </form>

                    <form action="/" method="get" style="display:inline-block;">
                        <input type="hidden" name="category" value="South Indian">
                        <button type="submit" class="mx-1 filter-btn">South Indian</button>
                    </form>

                    <form action="/" method="get" style="display:inline-block;">
                        <input type="hidden" name="category" value="Gujarati">
                        <button type="submit" class="mx-1 filter-btn">Gujarati</button>
                    </form>

                    <form action="/" method="get" style="display:inline-block;">
                        <input type="hidden" name="category" value="">
                        <button type="submit" class="mx-1 filter-btn">All</button>
                    </form>
                </div>
            </div>


            <div class="search">
                <div class="search-bar mt-5">
                    <form class="d-flex">
                        <input type="text" name="search" placeholder="Title, Language, Genre" />
                        <button type="submit" class="search-btn">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="movie-grid">
        <% allMovies.forEach((movie)=> { %>
            <div class="movie-card">
                <a href="#" class="img">
                    <img src="<%= movie.image %>" alt="<%= movie.title %>">
                </a>
                <div class="movie-content">
                    <div class="movie-title">
                        <%= movie.title %>
                    </div>
                    <div class="movie-info"><strong>Language:</strong>
                        <%= movie.language %>
                    </div>
                    <div class="movie-info"><strong>Genre:</strong>
                        <%= movie.genre %>
                    </div>
                    <div class="movie-info"><strong>Year:</strong>
                        <%= movie.year %>
                    </div>
                    <div class="button-group">
                        <a href="/edit-movie/<%= movie.id %>" class="action-btn edit-btn">Edit</a>
                        <a href="/delete-movie/<%= movie.id %>" class="action-btn delete-btn">Delete</a>
                        <a href="/view-movie/<%= movie._id %>" class="action-btn view-btn">View</a>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</body>

</html>